<features xmlns="http://karaf.apache.org/xmlns/features/v1.6.0" name="thign4-core-auth-${project.version}">

  <feature name="thing4-core-auth" description="Thing4 Authentication/Authorization Layer" version="${project.version}">
    <feature>openhab-core-base</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth}</bundle>
  </feature>

  <feature name="thing4-core-auth-apitoken">
    <feature>thing4-core-auth</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.credential.apitoken}</bundle>
  </feature>

  <feature name="thing4-core-auth-apitoken-provider">
    <feature>thing4-core-auth-apitoken</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.provider.apitoken}</bundle>
  </feature>

  <feature name="thing4-core-auth-cookie">
    <feature>thing4-core-auth</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.credential.cookie}</bundle>
  </feature>

  <feature name="thing4-core-auth-jwt">
    <feature>thing4-core-auth</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.credential.jwt}</bundle>
  </feature>

  <feature name="thing4-core-auth-jwt-provider">
    <feature>openhab.tp-jose4j</feature>
    <feature>thing4-core-auth-jwt</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.provider.jwt}</bundle>
  </feature>

  <feature name="thing4-core-auth-password">
    <feature>thing4-core-auth</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.credential.password}</bundle>
  </feature>

  <feature name="thing4-core-auth-local-provider">
    <feature>thing4-core-auth-password</feature>

    <bundle>mvn:${mvn:org.thing4.core.auth.provider.local}</bundle>
  </feature>

</features>
